<UserControl x:Class="wayhome.MassRenamer.Views.MultiLineTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DataContext="RenameViewModel"
             d:DesignHeight="450" d:DesignWidth="800">
    <RichTextBox x:Name="tbFileNames" Margin="1,3,0,0" FontFamily="Lucida Console" BorderThickness="0,0,0,0" AllowDrop="False" VerticalScrollBarVisibility="Auto" TextChanged="tbFileNames_TextChanged" Block.LineHeight="4" >

    </RichTextBox>
</UserControl>
